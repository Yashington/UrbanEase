# Core
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://127.0.0.1:27017/urbanease

# Auth
JWT_SECRET=change_this_in_dev

# CORS (supports multiple origins, comma-separated)
# Prefer FRONTEND_URLS over older CORS_ORIGIN/SOCKET_CORS_ORIGIN
FRONTEND_URLS=http://localhost:3000

# Payments: Razorpay
# Get these from Razorpay Dashboard (test or live keys as per environment)
RAZORPAY_KEY_ID=rzp_test_XXXXXXXXXXXXXXXX
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx
# Webhook secret you configure in Razorpay Dashboard (Settings > Webhooks)
RAZORPAY_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxx

# Optional: environment gating for payments (useful if you run both test & live)
PAYMENT_PROVIDER=razorpay
PAYMENT_CURRENCY=INR

# Optional: timeouts and caching for external product sources (already in your app)
EXTERNAL_TIMEOUT_MS=7000
EXTERNAL_CACHE_MS=60000

# Optional: logging and rate limiting (safer for production)
LOG_LEVEL=info
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120

# Optional: housekeeping
# Auto-cancel "pending" orders older than X minutes (if you implement a cron/worker)
PENDING_ORDER_TTL_MIN=60